{% extends 'base.html.twig' %}

{% block title %} {{ job_offer.title}} - {% endblock %}

{% block body %}

    <main>
        <div class="col-lg-8 col-10 mx-auto py-1">
            <div class="mt-5 mx-auto d-flex justify-content-end">
                <a href="{{ previous_page }}" class="btn btn-link text-dark">Retour</a>
            </div>

            <div class="mt-3 mx-auto">
                <h1 class="title text-center">{{ job_offer.title }}</h1>
            </div>

            <div class="mx-auto mt-5">
                <h5 class="h5 font-weight-bold">Description : </h5>
                <p class="text-justify mt-3">{{ job_offer.description }}</p>
            </div>

            <div class="mx-auto mt-5">
                <h5 class="h5 font-weight-bold">Prérequis : </h5>
                <ul class="mt-3">
                    {% for jobRequirement in job_offer.jobRequirements %}
                        <li>{{ jobRequirement.content }}</li>
                    {% endfor %}
                </ul>
            </div>

            <div class="mx-auto mt-5">
                <h5 class="h5 font-weight-bold">Informations : </h5>
                <p><i class="fas fa-money-bill-wave me-2"></i> Rémunération : {{ job_offer.salary }}</p>
                <p><i class="fas fa-file-contract me-2"></i> Type de contrat : {{ job_offer.jobType.name }}</p>
                <p><i class="fas fa-barcode me-2"></i> Référence de l'offre : {{ job_offer.reference }}</p>
                <p><i class="fas fa-file-signature me-2"></i> Date de début souhaité : {{ job_offer.dateStart|date('d/m/Y') }}</p>
                <p><i class="fas fa-building me-2"></i> Entreprise :
                    <a href="{{ path('company_show', {'id': job_offer.company.id, 'previous_page': null}) }}" class="link" target="_blank">{{ job_offer.company.name }}</a>
                </p>
                <p><i class="fas fa-map-marker-alt me-2"></i> Ville : {{ job_offer.city }}</p>
                <p>Publier le : {{ job_offer.createdAt|date('d/m/Y') }}</p>
            </div>

            <div class="mx-auto my-5 d-flex justify-content-center">
                <a href="#" class="btn cta-button me-4">Postuler</a>
                <a href="#" class="text-decoration-none align-self-center"><i class="fas fa-heart size-heart"></i></a>
            </div>
        </div>
    </main>

{% endblock %}
